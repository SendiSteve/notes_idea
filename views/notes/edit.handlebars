{{!-- Display form errors --}}
{{#each errors}}
    <div class="alert alert-danger mt-2">{{text}}</div>
    {{else}}
{{/each}}
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card border-secondary mt-5">
            <div class="card-header">Update Your notes</div>
            <div class="card-body">
                <form action="/notes/{{note.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <input type="text" class="form-control" name="title" value="{{note.title}}" placeholder="Idea title">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="notes" placeholder="Your notes here...">{{note.notes}}</textarea>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-sm">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>